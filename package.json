{
  "name": "prendus-learning-platform",
  "version": "0.0.4",
  "description": "The tool to create and upload videos and quizzes",
  "watch": {
    "build": {
      "patterns": [
        "app/client/components/*/*",
        "app/client/redux/*",
        "app/client/styles/*",
        "app/client/interfaces/*"
      ],
      "extensions": "ts,html"
    }
  },
  "scripts": {
    "start": "concurrently --kill-others \"npm run single-page-http2-server\" \"npm-watch\" \"node live-reload-server.js\"",
    "single-page-http2-server": "cd app/client && single-page-http2-server",
    "build": "npm run bundle && curl -k https://localhost:32567",
    "watch": "npm-watch",
    "bundle": "node systemjs-build.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:bmackley/prendus-learning-platform.git"
  },
  "homepage": "https://github.com/bmackley/prendus-learning-platform",
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^2.2.0",
    "es-no-build": "^0.1.0",
    "http2": "^3.3.6",
    "mz": "^2.4.0",
    "npm-watch": "^0.1.6",
    "single-page-http2-server": "^1.0.1",
    "socket.io": "^1.4.8",
    "systemjs-builder": "^0.15.26"
  }
}
